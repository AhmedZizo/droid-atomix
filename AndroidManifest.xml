<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
     package="edu.rit.poe.atomix" android:versionCode="1"
     android:versionName="1.0.0">
    <application android:icon="@drawable/atomix_icon"
            android:label="DroidAtomix">
         <activity android:name=".MenuActivity"
                android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
         <activity android:name=".AtomicActivity"
                android:configChanges="orientation"/>
         <activity android:name=".LevelListActivity"/>
    </application>
    <supports-screen android:smallScreens="false" android:normalScreens="true"
            android:largeScreens="false" android:anyDensity="true"/>
</manifest>
